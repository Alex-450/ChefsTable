<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new chef profile</h3>
        <%= simple_form_for @chef_profile do |f| %>
          <%= f.input :cuisine, collection: @cuisines, input_html: { multiple: true } %>
          <%= f.input :location, placeholder: 'Tokyo' %>
          <%= f.submit class: 'btn btn-flat btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
