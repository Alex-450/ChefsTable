<div class="container-fluid form-container pb-5 padding-200">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
      <div class="bg-white rounded p-3 shadow form-background">
        <h3>Create a new chef profile</h3>

        <%= simple_form_for @chef_profile do |f| %>
          <%= f.input :location, placeholder: 'Tokyo' %>
          <% ChefProfile::CUISINES.each do |cuisine| %>
            <% id = "cuisine-".concat(cuisine.parameterize) %>
            <%= check_box_tag id %>
            <label for="<%= id %>"><%= cuisine %></label>
          <% end %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-submit' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
