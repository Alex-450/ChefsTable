<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('banner.jpg') %>);">
  <div class="container padding-200 ">
    <h1>  <strong>Chef's Table</strong>!</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <%= form_tag chef_profiles_path, class:"d-flex", method: :get do %>
      <%= text_field_tag :query, nil, placeholder: "Search...", class:"form-tag"%>
      <button type="submit" class="btn btn-search">
        Search <%= icon('fas', 'search') %>
    </button>
    <% end %>
  </div>
</div>

<div class="container mt-5">
  <h2 id="home-card-title" class="pb-1">All kind of cuisines</h2>

  <div class="preview">
    <%= link_to chef_profiles_path(cuisines: 'Japanese'), id: 'btn-all-pic' do %>
